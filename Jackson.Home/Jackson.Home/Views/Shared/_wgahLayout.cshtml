<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title </title>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")

        <link href="~/Content/font-awesome.css" rel="stylesheet" />
        <link href="~/Content/social-buttons-3.css" rel="stylesheet" />
        <link href="~/Content/Jackson.css" rel="stylesheet"/>
        @Html.Partial("GoogleAnalytics")
    </head>

    <body>
        
        <div class="row blogPage ">
            <div id="" class=" row BlogHeaderRow">
                <div id="" class="col-xs-12 col-md-offset-2 col-md-8   ">
                    <div class="container">
                        <br />
                        <br />
                        <br />
                        <div class="col-xs-4 col-sm-4 col-md-3">
                            <a href="~/WaiGuoAtHome"><img class="img-responsive" src="/Content/images/headShot1.jpg" title="Go Home" /></a>
                        </div>
                        <div class="col-xs-8 col-sm-8 col-md-9 ">
                            <h1>Wai Guo is Abroad! </h1>
                            <h3>The rants, ramblings, journeys, and photos of Jackson Hayes</h3>


                            <h3>子曰。学而不思则罔、思而不学则殆</h3>
                            <br />
                            <a href="~/WaiGuoAtHome/Images" class="btn btn-twitter socialButton"><i class="fa fa-camera"></i> | Images</a>
                            <a href="https://twitter.com/objectivejohn" class="btn btn-twitter socialButton"><i class="fa fa-twitter"> | Twitter</i></a>

                        </div>

                    </div>

                </div>
            </div>

            <div class="col-xs-12 blogRowBackground">
                <div id="" class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 ">
                    @RenderBody()
                </div>
            </div>
        </div>
        <div class="row container">
            <footer class="modal-footer row">
                <p>&copy; John Joseph Hayes, Jr. @DateTime.Now.ToString("yyyy")</p>
            </footer>
        </div>


        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", false)
    
    </body>
</html>
